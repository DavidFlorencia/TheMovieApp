<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/overviewFragment">

    <fragment
        android:id="@+id/overviewFragment"
        android:name="com.dflorencia.themovieapp.ui.OverviewFragment"
        android:label="OverviewFragment"
        tools:layout="@layout/fragment_overview">

        <action
            android:id="@+id/action_overview_to_detail"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <argument
            android:name="movie"
            app:argType="com.dflorencia.themovieapp.api.Movie"/>
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.dflorencia.themovieapp.ui.DetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/fragment_detail">

        <argument
            android:name="movie"
            app:argType="com.dflorencia.themovieapp.api.Movie"/>

    </fragment>

</navigation>